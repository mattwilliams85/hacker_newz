<ul>
  <% @links.sort_by_date.each do |link| %>
    <div class="link-container">
      <h3 class="inline"><%= link_to link.title, "http://#{link.url}"%></h3> &nbsp; <%= link_to "Edit", edit_link_path(link) %> |
      <%= link_to "Delete", link_path(link), :method => :delete %> </p>
      <p class="url"> <%= link.url %> </p>
      <p> <%= link_to "^", link_path(link, { :upvotes => (link.upvotes + 1) }), :method => :patch %> <%= link.upvotes %> votes | <%= link.comments.length %> comments
      <p> <%= link_to "[comment]", link_path(link) %> </p>
    </div>
  <% end %>

</ul>
